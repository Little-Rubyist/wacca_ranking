            %li
              %a.dropdown-item{:href => sponsors_path} #{I18n.t('views.header.donation')}
            %li
              %hr.dropdown-divider/
            %li
              %a.dropdown-item{:href => agreement_path} #{I18n.t('views.header.agreement')}
            %li
              %a.dropdown-item{:href => policies_path} #{I18n.t('views.header.policy')}
