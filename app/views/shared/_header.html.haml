          %ul.dropdown-menu
            %li
              %a.dropdown-item{:href => gallery_icons_path} #{I18n.t('views.header.icons')}
            %li
              %a.dropdown-item{:href => gallery_plates_path} #{I18n.t('views.header.plates')}
            %li
